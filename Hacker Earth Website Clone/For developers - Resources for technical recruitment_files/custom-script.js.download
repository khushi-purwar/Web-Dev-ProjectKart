// Custom script for header fix on scroll
jQuery(window).scroll(function () {
    if (jQuery(this).scrollTop() > 1) {
        jQuery('.site-header').addClass('fixed');
    } else {
        jQuery('.site-header').removeClass('fixed');
    }
});

