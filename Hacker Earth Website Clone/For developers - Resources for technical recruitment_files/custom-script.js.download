});

// Menu Custom JS
jQuery(document).ready(function (jQuery) {

	jQuery(".main-header-menu-toggle").on("click", function (a) {
		var that = jQuery(this);
		jQuery('.mobile-nav').toggleClass('hide show');
		/* Close/hide the sidenav */
		jQuery('body').toggleClass("left1-transform").promise().done(function () {
			if (jQuery('body').hasClass("left1-transform")) {
				that.addClass("fa-close");
				that.removeClass("fa-bars");
				jQuery('#header-secondary').addClass('bg-white');
				jQuery('.zeynep').zeynep({}).open();
				jQuery('body').css({overflow: 'hidden',height: 'auto'});
			} else {
				that.removeClass("fa-close");
				that.addClass("fa-bars");
				jQuery('#header-secondary').removeClass('bg-white');
				jQuery('.zeynep').zeynep({}).close();
				jQuery('body').css({overflow: 'auto',height: '100%'});
			}
		});
	});

	jQuery(window).scroll(function () {
		if (jQuery(this).scrollTop() > 50) {
			jQuery('body').addClass('header-fixed');
			jQuery('.header-top').css('top','-50px');
		} else {
			jQuery('body').removeClass('header-fixed');
			jQuery('.header-top').css('top','0px');
		}
	});
});